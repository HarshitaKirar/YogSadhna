<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Register</title>
    <script src="https://cdn.tailwindcss.com"></script>
  </head>
  <body>
    <section
      class="flex items-center justify-center min-h-screen bg-[#fdf6ec] px-4"
    >
      <div class="bg-white shadow-lg rounded-2xl p-8 w-full max-w-md">
        <!-- Heading -->
        <h2 class="text-2xl font-bold text-center text-gray-800 mb-6">
          Register
        </h2>

        <!-- Form -->
        <form action="/register" method="POST" class="space-y-5">
          <% if (error && error.length > 0) { %>
            <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded">
              <%= error %>
            </div>
          <% } %>
          <!-- First Name -->
          <div>
            <label class="block text-sm font-medium text-gray-700 mb-1"
              >First Name</label
            >
            <input
              type="text"
              name="firstName"
              required
              placeholder="Enter your first name"
              class="w-full px-4 py-2 rounded-lg border border-gray-300 focus:outline-none focus:ring-2 focus:ring-orange-500"
            />
          </div>

          <!-- Last Name -->
          <div>
            <label class="block text-sm font-medium text-gray-700 mb-1"
              >Last Name</label
            >
            <input
              type="text"
              name="lastName"
              required
              placeholder="Enter your last name"
              class="w-full px-4 py-2 rounded-lg border border-gray-300 focus:outline-none focus:ring-2 focus:ring-orange-500"
            />
          </div>

          <!-- Email -->
          <div>
            <label class="block text-sm font-medium text-gray-700 mb-1"
              >Email</label
            >
            <input
              type="email"
              name="email"
              required
              placeholder="Enter your email"
              class="w-full px-4 py-2 rounded-lg border border-gray-300 focus:outline-none focus:ring-2 focus:ring-orange-500"
            />
          </div>

          <!-- Password -->
          <div>
            <label class="block text-sm font-medium text-gray-700 mb-1"
              >Password</label
            >
            <input
              type="password"
              name="password"
              required
              placeholder="Enter your password"
              class="w-full px-4 py-2 rounded-lg border border-gray-300 focus:outline-none focus:ring-2 focus:ring-orange-500"
            />
          </div>

          <!-- Register Button -->
          <button
            type="submit"
            class="w-full bg-orange-500 text-white py-2 px-4 rounded-lg hover:bg-orange-600 transition duration-300"
          >
            Register
          </button>
        </form>

        <!-- Extra Link -->
        <p class="text-center text-sm text-gray-600 mt-4">
          Already have an account?
          <a href="/login" class="text-orange-500 hover:underline"
            >Login here</a
          >
        </p>
      </div>
    </section>
  </body>
</html>
