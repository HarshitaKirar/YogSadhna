      <div class="grid grid-cols-1 md:grid-cols-3 gap-8 mt-10">
        <div
          class="rounded-lg overflow-hidden shadow hover:shadow-lg transition"
        >
          <img
            src="https://randomuser.me/api/portraits/women/44.jpg"
            alt="Instructor"
            class="w-full h-64 object-cover"
          />
          <div class="p-4">
            <h3 class="text-xl font-semibold">Sara Smith</h3>
            <p class="text-gray-600">Hatha & Vinyasa Specialist</p>
          </div>
        </div>
        <div
          class="rounded-lg overflow-hidden shadow hover:shadow-lg transition"
        >
          <img
            src="https://randomuser.me/api/portraits/men/32.jpg"
            alt="Instructor"
            class="w-full h-64 object-cover"
          />
          <div class="p-4">
            <h3 class="text-xl font-semibold">John Doe</h3>
            <p class="text-gray-600">Meditation & Mindfulness</p>
          </div>
        </div>
        <div
          class="rounded-lg overflow-hidden shadow hover:shadow-lg transition"
        >
          <img
            src="https://randomuser.me/api/portraits/women/65.jpg"
            alt="Instructor"
            class="w-full h-64 object-cover"
          />
          <div class="p-4">
            <h3 class="text-xl font-semibold">Emily Brown</h3>
            <p class="text-gray-600">Power Yoga Expert</p>
          </div>
        </div>
      </div>
    </section>

    <!-- ====== PRICING SECTION ====== -->
    <section id="pricing" class="py-20 px-8 bg-white text-center">
      <h2 class="text-3xl font-bold mb-6">Pricing Plans</h2>
      <div class="grid grid-cols-1 md:grid-cols-3 gap-8 mt-10">
        <div class="border p-6 rounded-lg shadow hover:shadow-lg transition">
          <h3 class="text-xl font-semibold mb-2">Beginner</h3>
          <p class="text-gray-600 mb-4">$49/month</p>
          <ul class="text-gray-600 mb-4">
            <li>Access to 3 classes/week</li>
            <li>Beginner level guidance</li>
          </ul>
          <a
            href="#join"
            class="bg-orange-500 text-white px-4 py-2 rounded-lg hover:bg-orange-600 transition"
            >Join Now</a
          >
        </div>
        <div class="border p-6 rounded-lg shadow hover:shadow-lg transition">
          <h3 class="text-xl font-semibold mb-2">Advanced</h3>
          <p class="text-gray-600 mb-4">$79/month</p>
          <ul class="text-gray-600 mb-4">
            <li>Access to all classes</li>
            <li>Personalized coaching</li>
          </ul>
          <a
            href="#join"
            class="bg-orange-500 text-white px-4 py-2 rounded-lg hover:bg-orange-600 transition"
            >Join Now</a
          >
        </div>
        <div class="border p-6 rounded-lg shadow hover:shadow-lg transition">
          <h3 class="text-xl font-semibold mb-2">Unlimited</h3>
          <p class="text-gray-600 mb-4">$99/month</p>
          <ul class="text-gray-600 mb-4">
            <li>Unlimited access to all sessions</li>
            <li>1-on-1 sessions with instructors</li>
          </ul>
          <a
            href="#join"
            class="bg-orange-500 text-white px-4 py-2 rounded-lg hover:bg-orange-600 transition"
            >Join Now</a
          >
        </div>
      </div>
    </section>

    <!-- ====== GALLERY SECTION ====== -->
    <section id="gallery" class="py-20 px-8 bg-white text-center">
      <h2 class="text-3xl font-bold mb-6">Session Gallery</h2>
      <p class="text-gray-600 mb-8">Recent moments from our yoga sessions</p>
      <% if (recentPosts && recentPosts.length > 0) { %>
      <div class="grid grid-cols-1 md:grid-cols-3 gap-8 mt-10">
        <% recentPosts.forEach(post => { %>
        <div class="rounded-lg overflow-hidden shadow hover:shadow-lg transition">
          <% if (post.images && post.images.length > 0) { %>
          <img src="<%= post.images[0] %>" alt="<%= post.title %>" class="w-full h-48 object-cover" />
          <% } else { %>
          <div class="w-full h-48 bg-gradient-to-r from-orange-400 to-pink-400 flex items-center justify-center">
            <span class="text-white text-4xl">üßò‚Äç‚ôÄÔ∏è</span>
          </div>
          <% } %>
          <div class="p-4">
            <% if (post.sessionType) { %>
            <span class="inline-block px-2 py-1 text-xs font-semibold text-white bg-orange-500 rounded-full mb-2">
              <%= post.sessionType.toUpperCase() %>
            </span>
            <% } %>
            <h3 class="text-xl font-semibold mb-2"><%= post.title %></h3>
            <p class="text-gray-600 text-sm"><%= post.description.substring(0, 100) %>...</p>
          </div>
        </div>
        <% }) %>
      </div>
      <div class="mt-8">
        <a href="/gallery" class="bg-orange-500 text-white px-6 py-3 rounded-lg hover:bg-orange-600 transition">
          View All Sessions
        </a>
      </div>
      <% } else { %>
      <p class="text-gray-500">No gallery posts yet. Check back soon!</p>
      <% } %>
    </section>

    <!-- ====== BLOG / RESOURCES SECTION ====== -->
    <section id="blog" class="py-20 px-8 bg-[#fdf6ec] text-center">
      <h2 class="text-3xl font-bold mb-6">Wellness Blog</h2>
      <div class="grid grid-cols-1 md:grid-cols-3 gap-8 mt-10">
        <div
          class="rounded-lg overflow-hidden shadow hover:shadow-lg transition"
        >
          <img
            src="https://images.unsplash.com/photo-1605296867304-46d5465a13f1"
            alt="Blog"
            class="w-full h-48 object-cover"
          />
          <div class="p-4">
            <h3 class="text-xl font-semibold mb-2">
              5 Yoga Poses for Beginners
            </h3>
            <p class="text-gray-600 text-sm">
              Learn the basic poses to start your yoga journey safely.
            </p>
          </div>
        </div>
        <div
          class="rounded-lg overflow-hidden shadow hover:shadow-lg transition"
        >
          <img
            src="https://images.unsplash.com/photo-1507537297725-24a1c029d3ca"
            alt="Blog"
            class="w-full h-48 object-cover"
          />
          <div class="p-4">
            <h3 class="text-xl font-semibold mb-2">Mindful Meditation Tips</h3>
            <p class="text-gray-600 text-sm">
              Daily practices to calm your mind and reduce stress.
            </p>
          </div>
        </div>
        <div
          class="rounded-lg overflow-hidden shadow hover:shadow-lg transition"
        >
          <img
            src="https://images.unsplash.com/photo-1518609878373-06d740f60d8b"
            alt="Blog"
            class="w-full h-48 object-cover"
          />
          <div class="p-4">
            <h3 class="text-xl font-semibold mb-2">Nutrition for Yogis</h3>
            <p class="text-gray-600 text-sm">
              Simple diet tips to complement your yoga lifestyle.
            </p>
          </div>
        </div>
      </div>
    </section>

    <!-- ====== CONTACT / JOIN SECTION ====== -->
    <section id="contact" class="py-20 px-8 bg-white text-center">
      <h2 class="text-3xl font-bold mb-6">Contact Us</h2>
      <p class="max-w-2xl mx-auto mb-8">
        Have questions or want to book a class? Reach out to us!
      </p>
      <form class="max-w-xl mx-auto grid grid-cols-1 gap-4">
        <input
          type="text"
          placeholder="Your Name"
          class="border p-3 rounded-lg focus:outline-none focus:ring-2 focus:ring-orange-500"
        />
        <input
          type="email"
          placeholder="Your Email"
          class="border p-3 rounded-lg focus:outline-none focus:ring-2 focus:ring-orange-500"
        />
        <textarea
          placeholder="Your Message"
          class="border p-3 rounded-lg focus:outline-none focus:ring-2 focus:ring-orange-500"
        ></textarea>
        <button
          class="bg-orange-500 text-white px-6 py-3 rounded-lg hover:bg-orange-600 transition"
        >
          Send Message
        </button>
      </form>
    </section>

    <!-- ====== FOOTER ====== -->
    <footer class="bg-[#fdf6ec] py-8 text-center text-gray-700">
      <p>¬© 2025 ü™∑ Yoga. All rights reserved.</p>
      <div class="flex justify-center space-x-4 mt-4">
        <a href="#" class="hover:text-orange-500 transition">Facebook</a>
        <a href="#" class="hover:text-orange-500 transition">Instagram</a>
        <a href="#" class="hover:text-orange-500 transition">Twitter</a>
      </div>
    </footer>

    <!-- Swiper JS -->
    <script src="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.js"></script>
    <script>
      var swiper = new Swiper(".mySwiper", {
        loop: true,
        speed: 3000, // smooth transition speed
        autoplay: {
          delay: 0, // continuous autoplay
          disableOnInteraction: false,
        },
        slidesPerView: 1,
        spaceBetween: 0,
      });
    </script>
  </body>
</html>
