    <!-- Class Highlights -->
    <section id="classes" class="px-8 py-16 text-center">
      <h2 class="text-3xl font-bold mb-10">Class Highlights</h2>
      <div class="grid grid-cols-2 md:grid-cols-4 gap-8">
        <div class="p-6 bg-white rounded-xl shadow hover:shadow-md">
          <img
            src="https://img.icons8.com/ios-filled/100/ff7f50/yoga.png"
            class="mx-auto mb-4"
            alt="Hatha Yoga"
          />
          <h3 class="font-semibold">Hatha Yoga</h3>
        </div>
        <div class="p-6 bg-white rounded-xl shadow hover:shadow-md">
          <img
            src="https://img.icons8.com/ios-filled/100/ff7f50/exercise.png"
            class="mx-auto mb-4"
            alt="Vinyasa Yoga"
          />
          <h3 class="font-semibold">Vinyasa Yoga</h3>
        </div>
        <div class="p-6 bg-white rounded-xl shadow hover:shadow-md">
          <img
            src="https://img.icons8.com/ios-filled/100/ff7f50/stretching.png"
