      <!-- Text Below Images -->
      <!-- ====== ABOUT SECTION ====== -->
      <section id="about" class="py-20 px-8 bg-[#fdf6ec] text-center">
        <h2 class="text-3xl font-bold mb-6">About Us</h2>
        <p class="max-w-2xl mx-auto text-gray-700 mb-8">
