        </div>
        <div class="p-6 bg-white rounded-xl shadow hover:shadow-md">
          <img
            src="https://img.icons8.com/ios-filled/100/ff7f50/lotus.png"
            class="mx-auto mb-4"
            alt="Power Yoga"
          />
          <h3 class="font-semibold">Power Yoga</h3>
        </div>
      </div>
    </section>

    <!-- ====== INSTRUCTORS SECTION ====== -->
    <section id="instructors" class="py-20 px-8 bg-[#fdf6ec] text-center">
