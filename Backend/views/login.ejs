<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <script src="https://cdn.tailwindcss.com"></script>
    <title>Yoga | Login</title>
  </head>
  <body class="min-h-screen flex items-center justify-center bg-[#fdf6ec]">
    <!-- Login Card -->
    <div class="bg-white shadow-lg rounded-2xl p-8 w-full max-w-md">
      <!-- Logo / Title -->
      <div class="flex items-center justify-center mb-6">
        <span class="text-orange-500 font-bold text-2xl">ðŸª· YOGA</span>
      </div>

      <!-- Heading -->
      <h2 class="text-2xl font-bold text-center text-gray-800 mb-6">Login</h2>

      <!-- Form -->
      <form action="/login" method="POST" class="space-y-5">
        <% if (error && error.length > 0) { %>
          <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded">
            <%= error %>
          </div>
        <% } %>
        <!-- Email -->
        <div>
          <label class="block text-sm font-medium text-gray-700 mb-1"
            >Email</label
          >
          <input
            type="email"
            name="email"
            required
            placeholder="Enter your email"
            class="w-full px-4 py-2 rounded-lg border border-gray-300 focus:outline-none focus:ring-2 focus:ring-orange-500"
          />
        </div>

        <!-- Password -->
        <div>
          <label class="block text-sm font-medium text-gray-700 mb-1"
            >Password</label
          >
          <input
            type="password"
            name="password"
            required
            placeholder="Enter your password"
            class="w-full px-4 py-2 rounded-lg border border-gray-300 focus:outline-none focus:ring-2 focus:ring-orange-500"
          />
        </div>

        <!-- Remember & Forgot Password -->
        <div class="flex items-center justify-between text-sm">
          <label class="flex items-center space-x-2">
            <input
              type="checkbox"
              class="rounded text-orange-500 focus:ring-orange-500"
            />
            <span class="text-gray-600">Remember me</span>
          </label>
          <a href="#" class="text-orange-500 hover:underline"
            >Forgot password?</a
          >
        </div>

        <!-- Login Button -->
        <button
          type="submit"
          class="w-full bg-orange-500 text-white py-2 px-4 rounded-lg hover:bg-orange-600 transition duration-300"
        >
          Login
        </button>
      </form>

      <!-- Extra Link -->
      <p class="text-center text-sm text-gray-600 mt-4">
        Donâ€™t have an account?
        <a href="/register" class="text-orange-500 hover:underline"
          >Register here</a
        >
      </p>
    </div>
  </body>
</html>
