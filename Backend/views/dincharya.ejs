<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dincharya - Community Chat</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <style>
        .gradient-bg { background: linear-gradient(135deg, #8b5cf6 0%, #a855f7 100%); }
        .chat-container { height: 70vh; }
        .message-bubble { max-width: 70%; }
        .admin-message { background: linear-gradient(135deg, #dc2626, #ef4444); }
        .user-message { background: #f3f4f6; }
        .my-message { background: linear-gradient(135deg, #8b5cf6, #a855f7); }
        .meeting-message { background: linear-gradient(135deg, #059669, #10b981); }
        .online-indicator { width: 8px; height: 8px; background: #10b981; border-radius: 50%; }
    </style>
</head>
<body class="bg-gray-100">
    <!-- Header -->
    <header class="gradient-bg text-white py-4 px-6 shadow-lg">
        <div class="max-w-6xl mx-auto flex justify-between items-center">
            <div class="flex items-center space-x-3">
                <i class="fas fa-comments text-2xl"></i>
                <div>
                    <h1 class="text-2xl font-bold">Dincharya</h1>
                    <p class="text-sm opacity-90">Community Chat</p>
                </div>
            </div>
            <div class="flex items-center space-x-4">
                <div class="flex items-center space-x-2">
                    <div class="online-indicator"></div>
                    <span class="text-sm"><%= usersWithPhone.length %> members</span>
                </div>
                <a href="/profile" class="bg-white text-purple-600 px-4 py-2 rounded-lg hover:bg-gray-100 transition duration-300">Profile</a>
            </div>
        </div>
    </header>

    <div class="max-w-6xl mx-auto flex h-screen">
        <!-- Sidebar - Members List -->
        <div class="w-1/4 bg-white shadow-lg">
            <div class="p-4 border-b">
                <h3 class="font-semibold text-gray-800 flex items-center">
                    <i class="fas fa-users mr-2 text-purple-500"></i>
                    Community Members
                </h3>
            </div>
            <div class="overflow-y-auto" style="height: calc(100vh - 140px);">
                <% if (usersWithPhone && usersWithPhone.length > 0) { %>
                    <% usersWithPhone.forEach(member => { %>
                        <div class="p-3 border-b hover:bg-gray-50 transition duration-200">
                            <div class="flex items-center space-x-3">
                                <div class="relative">
                                    <img src="<%= member.profilePhoto || '/images/default-avatar.png' %>" alt="Avatar" class="w-10 h-10 rounded-full">
                                    <div class="absolute bottom-0 right-0 online-indicator border-2 border-white"></div>
                                </div>
                                <div class="flex-1">
                                    <p class="font-medium text-sm"><%= member.firstName %> <%= member.lastName %></p>
                                    <% if (user.isAdmin && member.phone) { %>
                                        <p class="text-xs text-gray-500"><%= member.phone %></p>
                                    <% } else { %>
                                        <p class="text-xs text-green-500">Online</p>
                                    <% } %>
                                </div>
                            </div>
                        </div>
                    <% }) %>
                <% } else { %>
                    <div class="p-4 text-center text-gray-500">
                        <i class="fas fa-users text-2xl mb-2"></i>
                        <p class="text-sm">No members with phone numbers yet</p>
                    </div>
                <% } %>
            </div>
        </div>

        <!-- Chat Area -->
        <div class="flex-1 flex flex-col bg-white">
            <!-- Chat Messages -->
            <div class="chat-container overflow-y-auto p-4 space-y-4 bg-gray-50">
                <% if (messages && messages.length > 0) { %>
                    <% messages.forEach(message => { %>
                        <div class="flex <%= message.sender._id.toString() === user._id.toString() ? 'justify-end' : 'justify-start' %>">
                            <div class="message-bubble">
                                <% if (message.sender._id.toString() !== user._id.toString()) { %>
                                    <div class="flex items-center space-x-2 mb-2">
                                        <img src="<%= message.sender.profilePhoto || '/images/default-avatar.png' %>" alt="Avatar" class="w-8 h-8 rounded-full">
                                        <div>
                                            <span class="text-sm font-medium text-gray-700">
                                                <%= message.sender.firstName %> <%= message.sender.lastName %>
                                                <% if (message.sender.isAdmin) { %>
                                                    <i class="fas fa-crown text-yellow-500 ml-1"></i>
                                                <% } %>
                                            </span>
                                            <% if (user.isAdmin && message.sender.phone) { %>
                                                <span class="text-xs text-gray-500 ml-2"><%= message.sender.phone %></span>
                                            <% } %>
                                        </div>
                                    </div>
                                <% } else { %>
                                    <div class="flex items-center justify-end space-x-2 mb-2">
                                        <span class="text-xs text-gray-500">You</span>
                                        <img src="<%= message.sender.profilePhoto || '/images/default-avatar.png' %>" alt="Your Avatar" class="w-6 h-6 rounded-full">
                                    </div>
                                <% } %>
                                
                                <div class="<%= message.messageType === 'meeting' ? 'meeting-message' : (message.isAdminMessage ? 'admin-message' : (message.sender._id.toString() === user._id.toString() ? 'my-message' : 'user-message')) %> rounded-lg px-4 py-3">
                                    <% if (message.messageType === 'meeting') { %>
                                        <div class="flex items-center text-white mb-2">
                                            <i class="fas fa-video mr-2"></i>
                                            <span class="text-sm font-medium">MEETING LINK</span>
                                        </div>
                                    <% } else if (message.isAdminMessage) { %>
                                        <div class="flex items-center text-white mb-1">
                                            <i class="fas fa-crown mr-2"></i>
                                            <span class="text-xs font-medium">ADMIN</span>
                                        </div>
                                    <% } %>
                                    
                                    <% if (message.messageType === 'image' && message.mediaUrl) { %>
                                        <img src="<%= message.mediaUrl %>" alt="Shared image" class="max-w-xs rounded-lg mb-2">
                                    <% } else if (message.messageType === 'video' && message.mediaUrl) { %>
                                        <video controls class="max-w-xs rounded-lg mb-2">
                                            <source src="<%= message.mediaUrl %>" type="video/mp4">
                                        </video>
                                    <% } %>
                                    
                                    <% if (message.message) { %>
                                        <p class="<%= message.messageType === 'meeting' || message.isAdminMessage || message.sender._id.toString() === user._id.toString() ? 'text-white' : 'text-gray-800' %>">
                                            <% if (message.messageType === 'link' || message.messageType === 'meeting') { %>
                                                <a href="<%= message.message %>" target="_blank" class="underline hover:no-underline">
                                                    <%= message.message %>
                                                </a>
                                            <% } else { %>
                                                <%= message.message %>
                                            <% } %>
                                        </p>
                                    <% } %>
                                </div>
                                
                                <div class="flex items-center justify-between mt-1">
                                    <div class="text-xs text-gray-500 <%= message.sender._id.toString() === user._id.toString() ? 'text-right' : 'text-left' %>">
                                        <%= new Date(message.createdAt).toLocaleTimeString() %>
                                    </div>
                                    <% if (message.sender._id.toString() === user._id.toString() || user.isAdmin) { %>
                                        <form action="/dincharya/delete/<%= message._id %>" method="POST" class="inline" onsubmit="return confirm('Delete this message?')">
                                            <button type="submit" class="text-red-500 hover:text-red-700 text-xs ml-2">
                                                <i class="fas fa-trash"></i>
                                            </button>
                                        </form>
                                    <% } %>
                                </div>
                            </div>
                        </div>
                    <% }) %>
                <% } else { %>
                    <div class="text-center py-12">
                        <i class="fas fa-comments text-6xl text-gray-300 mb-4"></i>
                        <p class="text-gray-500 text-lg">Welcome to Dincharya!</p>
                        <p class="text-gray-400">Start the conversation with your community.</p>
                    </div>
                <% } %>
            </div>

            <!-- Message Input -->
            <div class="border-t p-4 bg-white">
                <form action="/dincharya/message" method="POST" enctype="multipart/form-data" class="space-y-3">
                    <!-- Message Type Buttons -->
                    <div class="flex space-x-2">
                        <button type="button" onclick="setMessageType('text')" class="message-type-btn bg-purple-500 text-white px-3 py-1 rounded-full text-sm">
                            <i class="fas fa-comment mr-1"></i>Text
                        </button>
                        <button type="button" onclick="setMessageType('link')" class="message-type-btn bg-blue-500 text-white px-3 py-1 rounded-full text-sm">
                            <i class="fas fa-link mr-1"></i>Link
                        </button>
                        <% if (user.isAdmin) { %>
                            <button type="button" onclick="setMessageType('meeting')" class="message-type-btn bg-green-500 text-white px-3 py-1 rounded-full text-sm">
                                <i class="fas fa-video mr-1"></i>Meeting
                            </button>
                        <% } %>
                        <label class="message-type-btn bg-orange-500 text-white px-3 py-1 rounded-full text-sm cursor-pointer">
                            <i class="fas fa-image mr-1"></i>Media
                            <input type="file" name="media" accept="image/*,video/*" class="hidden" onchange="handleFileSelect(this)">
                        </label>
                    </div>
                    
                    <!-- Message Input -->
                    <div class="flex space-x-3">
                        <input type="hidden" name="messageType" id="messageType" value="text">
                        <div class="flex-1 relative">
                            <input type="text" name="message" id="messageInput" placeholder="Type your message..." class="w-full border rounded-full px-4 py-3 focus:ring-2 focus:ring-purple-500 focus:border-transparent">
                            <div id="filePreview" class="hidden absolute bottom-full mb-2 left-0 bg-white border rounded-lg p-2 shadow-lg">
                                <div class="flex items-center space-x-2">
                                    <i class="fas fa-file text-gray-500"></i>
                                    <span id="fileName" class="text-sm text-gray-700"></span>
                                    <button type="button" onclick="clearFile()" class="text-red-500 hover:text-red-700">
                                        <i class="fas fa-times"></i>
                                    </button>
                                </div>
                            </div>
                        </div>
                        <button type="submit" class="bg-purple-500 text-white px-6 py-3 rounded-full hover:bg-purple-600 transition duration-300">
                            <i class="fas fa-paper-plane"></i>
                        </button>
                    </div>
                </form>
                
                <!-- Quick Actions for Admin -->
                <% if (user.isAdmin) { %>
                    <div class="mt-3 flex flex-wrap gap-2">
                        <button onclick="quickMessage('🧘‍♀️ Good morning everyone! Ready for today\\'s yoga session?')" class="bg-purple-100 text-purple-800 px-3 py-1 rounded-full text-sm hover:bg-purple-200">
                            Morning greeting
                        </button>
                        <button onclick="quickMessage('📅 Don\\'t forget about today\\'s class!')" class="bg-blue-100 text-blue-800 px-3 py-1 rounded-full text-sm hover:bg-blue-200">
                            Class reminder
                        </button>
                        <button onclick="quickMessage('🎉 Great session everyone! Keep up the good work!')" class="bg-green-100 text-green-800 px-3 py-1 rounded-full text-sm hover:bg-green-200">
                            Encouragement
                        </button>
                    </div>
                <% } %>
            </div>
        </div>
    </div>

    <script>
        let currentMessageType = 'text';

        function setMessageType(type) {
            currentMessageType = type;
            document.getElementById('messageType').value = type;
            
            // Update button styles
            document.querySelectorAll('.message-type-btn').forEach(btn => {
                btn.classList.remove('ring-2', 'ring-offset-2');
            });
            event.target.classList.add('ring-2', 'ring-offset-2');
            
            // Update placeholder
            const input = document.getElementById('messageInput');
            switch(type) {
                case 'text':
                    input.placeholder = 'Type your message...';
                    break;
                case 'link':
                    input.placeholder = 'Paste a link...';
                    break;
                case 'meeting':
                    input.placeholder = 'Paste meeting link...';
                    break;
            }
        }

        function handleFileSelect(input) {
            const file = input.files[0];
            if (file) {
                document.getElementById('fileName').textContent = file.name;
                document.getElementById('filePreview').classList.remove('hidden');
                document.getElementById('messageInput').placeholder = 'Add a caption (optional)...';
            }
        }

        function clearFile() {
            document.querySelector('input[name="media"]').value = '';
            document.getElementById('filePreview').classList.add('hidden');
            document.getElementById('messageInput').placeholder = 'Type your message...';
        }

        function quickMessage(message) {
            document.getElementById('messageInput').value = message;
        }

        // Auto-scroll to bottom
        const chatContainer = document.querySelector('.chat-container');
        chatContainer.scrollTop = chatContainer.scrollHeight;

        // Auto-refresh messages every 15 seconds
        setInterval(() => {
            location.reload();
        }, 15000);

        // Handle Enter key for sending messages
        document.getElementById('messageInput').addEventListener('keypress', function(e) {
            if (e.key === 'Enter') {
                e.preventDefault();
                this.closest('form').submit();
            }
        });
    </script>
</body>
</html>