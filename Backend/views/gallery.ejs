<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Gallery - YogSadhna</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <style>
        .gradient-bg { background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); }
        .card-hover { transition: all 0.3s ease; }
        .card-hover:hover { transform: translateY(-5px); box-shadow: 0 20px 40px rgba(0,0,0,0.1); }
    </style>
  </head>
  <body class="bg-gradient-to-br from-blue-50 to-indigo-100 min-h-screen">
    <%- include('partials/header') %>

    <div class="container mx-auto px-4 py-8">
      <div class="max-w-4xl mx-auto">
        <div class="text-center mb-12">
          <h1 class="text-5xl font-bold gradient-bg bg-clip-text text-transparent mb-4">Session Gallery</h1>
          <p class="text-gray-600 text-lg">Discover our yoga sessions through beautiful moments captured</p>
        </div>

        <!-- Admin Create Post Form -->
        <% if (user && user.isAdmin) { %>
        <div class="bg-white rounded-lg shadow-md p-6 mb-8">
          <h2 class="text-xl font-semibold mb-4">Create New Post</h2>
          <form
            action="/gallery/create"
            method="POST"
            enctype="multipart/form-data"
          >
            <div class="mb-4">
              <label class="block text-gray-700 text-sm font-bold mb-2"
                >Title</label
              >
              <input
                type="text"
                name="title"
                required
                class="w-full px-3 py-2 border rounded-lg focus:outline-none focus:border-blue-500"
              />
            </div>
            <div class="mb-4">
              <label class="block text-gray-700 text-sm font-bold mb-2">Session Type</label>
              <select name="sessionType" required class="w-full px-3 py-2 border rounded-lg focus:outline-none focus:border-blue-500">
                <option value="">Select Session Type</option>
                <option value="yoga">üßò‚Äç‚ôÄÔ∏è Yoga</option>
                <option value="zumba">üíÉ Zumba</option>
                <option value="pranayam">üå¨Ô∏è Pranayam</option>
                <option value="meditation">üßò‚Äç‚ôÇÔ∏è Meditation</option>
                <option value="fitness">üí™ Fitness</option>
                <option value="pilates">ü§∏‚Äç‚ôÄÔ∏è Pilates</option>
                <option value="aerobics">üèÉ‚Äç‚ôÄÔ∏è Aerobics</option>
              </select>
            </div>
            <div class="mb-4">
              <label class="block text-gray-700 text-sm font-bold mb-2"
                >Description</label
              >
              <textarea
                name="description"
                required
                rows="3"
                class="w-full px-3 py-2 border rounded-lg focus:outline-none focus:border-blue-500"
              ></textarea>
            </div>
            <div class="mb-4">
              <label class="block text-gray-700 text-sm font-bold mb-2"
                >Images</label
              >
              <input
                type="file"
                name="images"
                multiple
                accept="image/*"
                class="w-full px-3 py-2 border rounded-lg"
              />
            </div>
            <div class="mb-4">
              <label class="block text-gray-700 text-sm font-bold mb-2"
                >Videos</label
              >
              <input
                type="file"
                name="videos"
                multiple
                accept="video/*"
                class="w-full px-3 py-2 border rounded-lg"
              />
            </div>
            <button
              type="submit"
              class="bg-blue-500 text-white px-6 py-2 rounded-lg hover:bg-blue-600"
            >
              Post
            </button>
          </form>
        </div>
        <% } %>

        <!-- Gallery Posts -->
        <div class="space-y-8">
          <% posts.forEach(post => { %>
          <div class="bg-white rounded-2xl shadow-lg overflow-hidden card-hover">
            <!-- Post Header -->
            <div class="p-4 border-b flex items-center justify-between">
              <div class="flex items-center">
                <img
                  src="<%= post.createdBy.profilePhoto || '/images/default-avatar.png' %>"
                  alt="Profile"
                  class="w-10 h-10 rounded-full mr-3"
                />
                <div>
                  <h3 class="font-semibold">
                    <%= post.createdBy.firstName %> <%= post.createdBy.lastName
                    %>
                  </h3>
                  <p class="text-sm text-gray-500">
                    <%= new Date(post.createdAt).toLocaleDateString() %>
                  </p>
                </div>
              </div>
              <% if (user && user.isAdmin) { %>
              <form
                action="/gallery/delete/<%= post._id %>"
                method="POST"
                class="inline"
              >
                <button type="submit" class="text-red-500 hover:text-red-700">
                  Delete
                </button>
              </form>
              <% } %>
            </div>

            <!-- Post Content -->
            <div class="p-4">
              <% if (post.sessionType) { %>
              <span class="inline-block px-3 py-1 text-xs font-semibold text-white bg-gradient-to-r from-purple-500 to-pink-500 rounded-full mb-2">
                <%= post.sessionType.toUpperCase() %>
              </span>
              <% } %>
              <h2 class="text-xl font-semibold mb-2"><%= post.title %></h2>
              <p class="text-gray-700 mb-4"><%= post.description %></p>

              <!-- Images -->
              <% if (post.images && post.images.length > 0) { %>
              <div class="grid grid-cols-1 md:grid-cols-2 gap-2 mb-4">
                <% post.images.forEach(image => { %>
                <img
                  src="<%= image %>"
                  alt="Post image"
                  class="w-full h-64 object-cover rounded-lg"
                />
                <% }) %>
              </div>
              <% } %>

              <!-- Videos -->
              <% if (post.videos && post.videos.length > 0) { %>
              <div class="space-y-2 mb-4">
                <% post.videos.forEach(video => { %>
                <video controls class="w-full rounded-lg">
                  <source src="<%= video %>" type="video/mp4" />
                  Your browser does not support the video tag.
                </video>
                <% }) %>
              </div>
              <% } %>
            </div>

            <!-- Post Actions -->
            <div class="px-4 py-3 border-t">
              <div class="flex items-center justify-between mb-3">
                <% if (user) { %>
                <button
                  onclick="likePost('<%= post._id %>')"
                  class="flex items-center text-gray-600 hover:text-red-500"
                >
                  <span class="mr-1">‚ù§Ô∏è</span>
                  <span id="likes-<%= post._id %>"
                    ><%= post.likes.length %></span
                  >
                </button>
                <% } else { %>
                <span class="flex items-center text-gray-600">
                  <span class="mr-1">‚ù§Ô∏è</span>
                  <span><%= post.likes.length %></span>
                </span>
                <% } %>
              </div>

              <!-- Comments -->
              <div class="space-y-2">
                <% post.comments.forEach(comment => { %>
                <div class="flex items-start">
                  <img
                    src="<%= comment.user.profilePhoto || '/images/default-avatar.png' %>"
                    alt="Profile"
                    class="w-8 h-8 rounded-full mr-2"
                  />
                  <div>
                    <span class="font-semibold text-sm"
                      ><%= comment.user.firstName %></span
                    >
                    <span class="text-gray-700 text-sm"
                      ><%= comment.text %></span
                    >
                  </div>
                </div>
                <% }) %>
              </div>

              <!-- Add Comment -->
              <% if (user) { %>
              <form
                action="/gallery/comment/<%= post._id %>"
                method="POST"
                class="mt-3"
              >
                <div class="flex">
                  <input
                    type="text"
                    name="text"
                    placeholder="Add a comment..."
                    class="flex-1 px-3 py-2 border rounded-l-lg focus:outline-none focus:border-blue-500"
                  />
                  <button
                    type="submit"
                    class="bg-blue-500 text-white px-4 py-2 rounded-r-lg hover:bg-blue-600"
                  >
                    Post
                  </button>
                </div>
              </form>
              <% } %>
            </div>
          </div>
          <% }) %>
        </div>
      </div>
    </div>

    <script>
      async function likePost(postId) {
        try {
          const response = await fetch(`/gallery/like/${postId}`, {
            method: "POST",
            headers: {
              "Content-Type": "application/json",
            },
          });
          const data = await response.json();
          document.getElementById(`likes-${postId}`).textContent = data.likes;
        } catch (error) {
          console.error("Error liking post:", error);
        }
      }
    </script>
  </body>
</html>
