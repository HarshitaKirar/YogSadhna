<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= classData.title %> - Class Chat</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <style>
        .gradient-bg { background: linear-gradient(135deg, #dc2626 0%, #ef4444 100%); }
        .chat-container { height: 60vh; }
        .message-bubble { max-width: 70%; }
        .admin-message { background: linear-gradient(135deg, #dc2626, #ef4444); }
        .user-message { background: #f3f4f6; }
        .announcement { background: linear-gradient(135deg, #059669, #10b981); }
    </style>
</head>
<body class="bg-gray-100">
    <%- include('../partials/header') %>
    
    <!-- Page Header -->
    <div class="gradient-bg text-white py-4 px-6">
        <div class="max-w-4xl mx-auto flex justify-between items-center">
            <div class="flex items-center space-x-3">
                <a href="/admin" class="text-white hover:text-gray-200">
                    <i class="fas fa-arrow-left text-xl"></i>
                </a>
                <div>
                    <h1 class="text-xl font-bold"><%= classData.title %></h1>
                    <p class="text-sm opacity-90">Class Chat - <%= classData.participants.length %> participants</p>
                </div>
            </div>
            <div class="flex items-center space-x-2">
                <span class="px-3 py-1 bg-white bg-opacity-20 rounded-full text-sm">
                    <i class="fas fa-crown mr-1"></i>Admin
                </span>
            </div>
        </div>
    </div>

    <div class="max-w-4xl mx-auto p-4">
        <!-- Class Info Card -->
        <div class="bg-white rounded-xl shadow-lg p-6 mb-6">
            <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
                <div class="text-center">
                    <div class="text-2xl font-bold text-green-600">$<%= classData.price %></div>
                    <div class="text-sm text-gray-600">Price</div>
                </div>
                <div class="text-center">
                    <div class="text-2xl font-bold text-blue-600"><%= classData.duration %> min</div>
                    <div class="text-sm text-gray-600">Duration</div>
                </div>
                <div class="text-center">
                    <div class="text-2xl font-bold text-purple-600"><%= classData.participants.length %>/<%= classData.maxParticipants %></div>
                    <div class="text-sm text-gray-600">Participants</div>
                </div>
            </div>
            
            <% if (classData.meetingLink) { %>
                <div class="mt-4 p-4 bg-green-50 rounded-lg">
                    <div class="flex items-center justify-between">
                        <div>
                            <h3 class="font-semibold text-green-800">Live Meeting Link</h3>
                            <p class="text-sm text-green-600">Share this link with participants</p>
                        </div>
                        <a href="<%= classData.meetingLink %>" target="_blank" class="bg-green-500 text-white px-4 py-2 rounded-lg hover:bg-green-600 transition duration-300">
                            <i class="fas fa-video mr-2"></i>Join Meeting
                        </a>
                    </div>
                </div>
            <% } %>
        </div>

        <!-- Chat Container -->
        <div class="bg-white rounded-xl shadow-lg overflow-hidden">
            <!-- Chat Header -->
            <div class="bg-gray-50 px-6 py-4 border-b">
                <h2 class="text-lg font-semibold flex items-center">
                    <i class="fas fa-comments mr-2 text-blue-500"></i>
                    Class Discussion
                </h2>
            </div>

            <!-- Messages -->
            <div class="chat-container overflow-y-auto p-4 space-y-4">
                <% if (messages && messages.length > 0) { %>
                    <% messages.forEach(message => { %>
                        <div class="flex <%= message.sender._id.toString() === user._id.toString() ? 'justify-end' : 'justify-start' %>">
                            <div class="message-bubble">
                                <% if (message.sender._id.toString() !== user._id.toString()) { %>
                                    <div class="flex items-center space-x-2 mb-1">
                                        <img src="<%= message.sender.profilePhoto || '/images/default-avatar.png' %>" alt="Avatar" class="w-6 h-6 rounded-full">
                                        <span class="text-xs font-medium text-gray-600"><%= message.sender.firstName %> <%= message.sender.lastName %></span>
                                    </div>
                                <% } %>
                                
                                <div class="<%= message.messageType === 'announcement' ? 'announcement' : (message.sender._id.toString() === user._id.toString() ? 'admin-message' : 'user-message') %> rounded-lg px-4 py-2">
                                    <% if (message.messageType === 'announcement') { %>
                                        <div class="flex items-center text-white mb-1">
                                            <i class="fas fa-bullhorn mr-2"></i>
                                            <span class="text-xs font-medium">ANNOUNCEMENT</span>
                                        </div>
                                    <% } %>
                                    
                                    <p class="<%= message.messageType === 'announcement' || message.sender._id.toString() === user._id.toString() ? 'text-white' : 'text-gray-800' %>">
                                        <%= message.message %>
                                    </p>
                                    
                                    <% if (message.messageType === 'link') { %>
                                        <a href="<%= message.message %>" target="_blank" class="inline-block mt-2 text-blue-500 hover:text-blue-600 text-sm underline">
                                            <i class="fas fa-external-link-alt mr-1"></i>Open Link
                                        </a>
                                    <% } %>
                                </div>
                                
                                <div class="text-xs text-gray-500 mt-1 <%= message.sender._id.toString() === user._id.toString() ? 'text-right' : 'text-left' %>">
                                    <%= new Date(message.createdAt).toLocaleTimeString() %>
                                </div>
                            </div>
                        </div>
                    <% }) %>
                <% } else { %>
                    <div class="text-center py-8">
                        <i class="fas fa-comments text-4xl text-gray-300 mb-3"></i>
                        <p class="text-gray-500">No messages yet. Start the conversation!</p>
                    </div>
                <% } %>
            </div>

            <!-- Message Input -->
            <div class="border-t p-4">
                <form action="/admin/class/<%= classData._id %>/message" method="POST" class="space-y-3">
                    <div class="flex space-x-2">
                        <button type="button" onclick="setMessageType('text')" class="message-type-btn bg-blue-500 text-white px-3 py-1 rounded text-sm">
                            <i class="fas fa-comment mr-1"></i>Text
                        </button>
                        <button type="button" onclick="setMessageType('link')" class="message-type-btn bg-green-500 text-white px-3 py-1 rounded text-sm">
                            <i class="fas fa-link mr-1"></i>Link
                        </button>
                        <button type="button" onclick="setMessageType('announcement')" class="message-type-btn bg-red-500 text-white px-3 py-1 rounded text-sm">
                            <i class="fas fa-bullhorn mr-1"></i>Announcement
                        </button>
                    </div>
                    
                    <div class="flex space-x-3">
                        <input type="hidden" name="messageType" id="messageType" value="text">
                        <input type="text" name="message" id="messageInput" placeholder="Type your message..." required class="flex-1 border rounded-lg px-4 py-2 focus:ring-2 focus:ring-red-500">
                        <button type="submit" class="bg-red-500 text-white px-6 py-2 rounded-lg hover:bg-red-600 transition duration-300">
                            <i class="fas fa-paper-plane"></i>
                        </button>
                    </div>
                </form>
                
                <!-- Quick Actions -->
                <div class="mt-3 flex flex-wrap gap-2">
                    <button onclick="quickMessage('Class starting in 5 minutes!')" class="bg-orange-100 text-orange-800 px-3 py-1 rounded-full text-sm hover:bg-orange-200">
                        5 min warning
                    </button>
                    <button onclick="quickMessage('Please join the meeting now')" class="bg-green-100 text-green-800 px-3 py-1 rounded-full text-sm hover:bg-green-200">
                        Join meeting
                    </button>
                    <% if (classData.meetingLink) { %>
                        <button onclick="quickMessage('<%= classData.meetingLink %>', 'link')" class="bg-blue-100 text-blue-800 px-3 py-1 rounded-full text-sm hover:bg-blue-200">
                            Share meeting link
                        </button>
                    <% } %>
                </div>
            </div>
        </div>
    </div>

    <script>
        let currentMessageType = 'text';

        function setMessageType(type) {
            currentMessageType = type;
            document.getElementById('messageType').value = type;
            
            // Update button styles
            document.querySelectorAll('.message-type-btn').forEach(btn => {
                btn.classList.remove('ring-2', 'ring-offset-2');
            });
            event.target.classList.add('ring-2', 'ring-offset-2');
            
            // Update placeholder
            const input = document.getElementById('messageInput');
            switch(type) {
                case 'text':
                    input.placeholder = 'Type your message...';
                    break;
                case 'link':
                    input.placeholder = 'Paste a link...';
                    break;
                case 'announcement':
                    input.placeholder = 'Type announcement...';
                    break;
            }
        }

        function quickMessage(message, type = 'announcement') {
            document.getElementById('messageInput').value = message;
            document.getElementById('messageType').value = type;
        }

        // Auto-scroll to bottom
        const chatContainer = document.querySelector('.chat-container');
        chatContainer.scrollTop = chatContainer.scrollHeight;

        // Auto-refresh messages every 10 seconds
        setInterval(() => {
            location.reload();
        }, 10000);
    </script>
</body>
</html>