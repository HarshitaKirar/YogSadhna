<header class="bg-white shadow-md sticky top-0 z-50">
    <div class="max-w-7xl mx-auto px-6 py-4">
        <div class="flex items-center justify-between">
            <!-- Logo -->
            <div class="flex items-center space-x-2">
                <a href="/" class="flex items-center space-x-2">
                    <span class="text-orange-500 font-bold text-2xl">ðŸª· YOGA</span>
                </a>
            </div>

            <!-- Navigation -->
            <nav class="hidden md:flex space-x-8">
                <a href="/" class="text-gray-700 hover:text-orange-500 transition-colors duration-300 font-medium">
                    <i class="fas fa-home mr-1"></i>Home
                </a>
                <a href="/About" class="text-gray-700 hover:text-orange-500 transition-colors duration-300 font-medium">
                    <i class="fas fa-info-circle mr-1"></i>About
                </a>
                <a href="/gallery" class="text-gray-700 hover:text-orange-500 transition-colors duration-300 font-medium">
                    <i class="fas fa-images mr-1"></i>Gallery
                </a>
                <a href="/services" class="text-gray-700 hover:text-orange-500 transition-colors duration-300 font-medium">
                    <i class="fas fa-spa mr-1"></i>Services
                </a>
                <a href="/blog" class="text-gray-700 hover:text-orange-500 transition-colors duration-300 font-medium">
                    <i class="fas fa-blog mr-1"></i>Blog
                </a>
                <a href="/library" class="text-gray-700 hover:text-orange-500 transition-colors duration-300 font-medium">
                    <i class="fas fa-book mr-1"></i>Library
                </a>
                <% if (typeof user !== 'undefined' && user) { %>
                    <a href="/dincharya" class="text-gray-700 hover:text-orange-500 transition-colors duration-300 font-medium">
                        <i class="fas fa-comments mr-1"></i>Dincharya
                    </a>
                <% } %>
                <a href="/contact" class="text-gray-700 hover:text-orange-500 transition-colors duration-300 font-medium">
                    <i class="fas fa-envelope mr-1"></i>Contact
                </a>
            </nav>

            <!-- User Actions -->
            <div class="flex items-center space-x-4">
                <% if (typeof user !== 'undefined' && user) { %>
                    <% if (user.isAdmin) { %>
                        <a href="/admin" class="bg-red-500 text-white px-4 py-2 rounded-lg hover:bg-red-600 transition duration-300 flex items-center space-x-1">
                            <i class="fas fa-user-shield"></i>
                            <span>Admin</span>
                        </a>
                    <% } %>
                    <a href="/profile" class="bg-blue-500 text-white px-4 py-2 rounded-lg hover:bg-blue-600 transition duration-300 flex items-center space-x-1">
                        <img src="<%= user.profilePhoto || '/images/default-avatar.png' %>" alt="Profile" class="w-6 h-6 rounded-full">
                        <span>Profile</span>
                    </a>
                    <form action="/logout" method="POST" class="inline">
                        <button type="submit" class="bg-gray-500 text-white px-4 py-2 rounded-lg hover:bg-gray-600 transition duration-300">
                            <i class="fas fa-sign-out-alt mr-1"></i>Logout
                        </button>
                    </form>
                <% } else { %>
                    <a href="/login" class="text-gray-700 hover:text-orange-500 transition-colors duration-300 font-medium">
                        <i class="fas fa-sign-in-alt mr-1"></i>Login
                    </a>
                    <a href="/register" class="bg-orange-500 text-white px-4 py-2 rounded-lg hover:bg-orange-600 transition duration-300">
                        <i class="fas fa-user-plus mr-1"></i>Sign Up
                    </a>
                <% } %>
            </div>

            <!-- Mobile Menu Button -->
            <div class="md:hidden">
                <button onclick="toggleMobileMenu()" class="text-gray-700 hover:text-orange-500">
                    <i class="fas fa-bars text-xl"></i>
                </button>
            </div>
        </div>

        <!-- Mobile Menu -->
        <div id="mobileMenu" class="hidden md:hidden mt-4 pb-4 border-t">
            <div class="flex flex-col space-y-3 pt-4">
                <a href="/" class="text-gray-700 hover:text-orange-500 transition-colors duration-300 font-medium">
                    <i class="fas fa-home mr-2"></i>Home
                </a>
                <a href="/About" class="text-gray-700 hover:text-orange-500 transition-colors duration-300 font-medium">
                    <i class="fas fa-info-circle mr-2"></i>About
                </a>
                <a href="/gallery" class="text-gray-700 hover:text-orange-500 transition-colors duration-300 font-medium">
                    <i class="fas fa-images mr-2"></i>Gallery
                </a>
                <a href="/services" class="text-gray-700 hover:text-orange-500 transition-colors duration-300 font-medium">
                    <i class="fas fa-spa mr-2"></i>Services
                </a>
                <a href="/blog" class="text-gray-700 hover:text-orange-500 transition-colors duration-300 font-medium">
                    <i class="fas fa-blog mr-2"></i>Blog
                </a>
                <a href="/library" class="text-gray-700 hover:text-orange-500 transition-colors duration-300 font-medium">
                    <i class="fas fa-book mr-2"></i>Library
                </a>
                <% if (typeof user !== 'undefined' && user) { %>
                    <a href="/dincharya" class="text-gray-700 hover:text-orange-500 transition-colors duration-300 font-medium">
                        <i class="fas fa-comments mr-2"></i>Dincharya
                    </a>
                <% } %>
                <a href="/contact" class="text-gray-700 hover:text-orange-500 transition-colors duration-300 font-medium">
                    <i class="fas fa-envelope mr-2"></i>Contact
                </a>
            </div>
        </div>
    </div>
</header>

<script>
    function toggleMobileMenu() {
        const menu = document.getElementById('mobileMenu');
        menu.classList.toggle('hidden');
    }
</script>