<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Yoga Library</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <style>
        .gradient-bg { background: linear-gradient(135deg, #f97316 0%, #fb923c 100%); }
        .card-hover { transition: all 0.3s ease; }
        .card-hover:hover { transform: translateY(-2px); box-shadow: 0 8px 25px rgba(0,0,0,0.1); }
        .star-rating { color: #fbbf24; }
    </style>
</head>
<body class="bg-gray-100">
    <!-- Header -->
    <header class="gradient-bg text-white py-6 px-6 shadow-lg">
        <div class="max-w-7xl mx-auto flex justify-between items-center">
            <div class="flex items-center space-x-3">
                <i class="fas fa-book text-3xl"></i>
                <h1 class="text-3xl font-bold">Yoga Library</h1>
            </div>
            <div class="flex items-center space-x-4">
                <% if (user) { %>
                    <button onclick="toggleSuggestForm()" class="bg-white text-orange-500 px-4 py-2 rounded-lg hover:bg-gray-100 transition duration-300 flex items-center space-x-2">
                        <i class="fas fa-plus"></i>
                        <span>Suggest Book</span>
                    </button>
                    <a href="/profile" class="bg-blue-500 px-4 py-2 rounded-lg hover:bg-blue-600 transition duration-300">Profile</a>
                <% } else { %>
                    <a href="/login" class="bg-white text-orange-500 px-4 py-2 rounded-lg hover:bg-gray-100 transition duration-300">Login</a>
                <% } %>
            </div>
        </div>
    </header>

    <div class="max-w-7xl mx-auto p-6">
        <!-- Suggest Book Form -->
        <% if (user) { %>
        <div id="suggestForm" class="hidden bg-white rounded-xl shadow-lg p-6 mb-8">
            <h2 class="text-2xl font-semibold mb-4 flex items-center">
                <i class="fas fa-book-medical mr-3 text-orange-500"></i>
                Suggest a Book
            </h2>
            <form action="/library/suggest" method="POST" enctype="multipart/form-data" class="grid grid-cols-1 md:grid-cols-2 gap-4">
                <input type="text" name="title" placeholder="Book Title" required class="border rounded-lg px-4 py-2 focus:ring-2 focus:ring-orange-500">
                <input type="text" name="author" placeholder="Author" class="border rounded-lg px-4 py-2 focus:ring-2 focus:ring-orange-500">
                <input type="text" name="category" placeholder="Category" class="border rounded-lg px-4 py-2 focus:ring-2 focus:ring-orange-500">
                <input type="url" name="purchaseLink" placeholder="Purchase Link" class="border rounded-lg px-4 py-2 focus:ring-2 focus:ring-orange-500">
                <textarea name="description" placeholder="Book Description" class="md:col-span-2 border rounded-lg px-4 py-2 focus:ring-2 focus:ring-orange-500" rows="3"></textarea>
                <textarea name="summary" placeholder="Book Summary" class="md:col-span-2 border rounded-lg px-4 py-2 focus:ring-2 focus:ring-orange-500" rows="4"></textarea>
                <div class="md:col-span-2">
                    <label class="block text-sm font-medium mb-2">Book Cover</label>
                    <input type="file" name="coverImage" accept="image/*" class="border rounded-lg px-4 py-2 w-full">
                </div>
                <div class="md:col-span-2 flex space-x-4">
                    <button type="submit" class="bg-green-500 text-white px-6 py-2 rounded-lg hover:bg-green-600 transition duration-300">Suggest Book</button>
                    <button type="button" onclick="toggleSuggestForm()" class="bg-gray-500 text-white px-6 py-2 rounded-lg hover:bg-gray-600 transition duration-300">Cancel</button>
                </div>
            </form>
        </div>
        <% } %>

        <!-- Books Grid -->
        <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
            <% if (books && books.length > 0) { %>
                <% books.forEach(book => { %>
                    <div class="bg-white rounded-xl shadow-lg overflow-hidden card-hover">
                        <!-- Book Cover -->
                        <div class="h-48 bg-gradient-to-br from-orange-100 to-orange-200 flex items-center justify-center">
                            <% if (book.coverImage) { %>
                                <img src="<%= book.coverImage %>" alt="<%= book.title %>" class="h-full w-full object-cover">
                            <% } else { %>
                                <i class="fas fa-book text-6xl text-orange-400"></i>
                            <% } %>
                        </div>

                        <!-- Book Info -->
                        <div class="p-6">
                            <h3 class="text-xl font-semibold mb-2"><%= book.title %></h3>
                            <% if (book.author) { %>
                                <p class="text-gray-600 mb-2">by <%= book.author %></p>
                            <% } %>
                            
                            <!-- Rating -->
                            <% if (book.avgRating > 0) { %>
                                <div class="flex items-center mb-2">
                                    <% for (let i = 1; i <= 5; i++) { %>
                                        <i class="fas fa-star <%= i <= book.avgRating ? 'star-rating' : 'text-gray-300' %>"></i>
                                    <% } %>
                                    <span class="ml-2 text-sm text-gray-600">(<%= book.reviews.length %> reviews)</span>
                                </div>
                            <% } %>

                            <% if (book.description) { %>
                                <p class="text-gray-700 text-sm mb-3"><%= book.description.substring(0, 100) %>...</p>
                            <% } %>

                            <!-- Suggested by -->
                            <div class="flex items-center text-sm text-gray-500 mb-4">
                                <img src="<%= book.suggestedBy.profilePhoto || '/images/default-avatar.png' %>" alt="Avatar" class="w-6 h-6 rounded-full mr-2">
                                <span>Suggested by <%= book.suggestedBy.firstName %> <%= book.suggestedBy.lastName %></span>
                            </div>

                            <!-- Actions -->
                            <div class="flex items-center justify-between mb-4">
                                <div class="flex items-center space-x-4">
                                    <% if (user) { %>
                                        <button onclick="likeBook('<%= book._id %>')" class="flex items-center space-x-1 text-gray-600 hover:text-red-500">
                                            <i class="fas fa-heart"></i>
                                            <span id="likes-<%= book._id %>"><%= book.likes.length %></span>
                                        </button>
                                        <button onclick="toggleComments('<%= book._id %>')" class="flex items-center space-x-1 text-gray-600 hover:text-blue-500">
                                            <i class="fas fa-comment"></i>
                                            <span><%= book.comments.length %></span>
                                        </button>
                                    <% } %>
                                </div>
                                <% if (book.purchaseLink) { %>
                                    <a href="<%= book.purchaseLink %>" target="_blank" class="bg-orange-500 text-white px-4 py-2 rounded-lg hover:bg-orange-600 transition duration-300 text-sm">
                                        <i class="fas fa-shopping-cart mr-1"></i>
                                        Buy Now
                                    </a>
                                <% } %>
                            </div>

                            <!-- Summary -->
                            <% if (book.summary) { %>
                                <div class="border-t pt-4 mb-4">
                                    <h4 class="font-semibold mb-2">Summary:</h4>
                                    <p class="text-gray-700 text-sm"><%= book.summary %></p>
                                </div>
                            <% } %>

                            <!-- Reviews Section -->
                            <% if (user) { %>
                                <div class="border-t pt-4">
                                    <button onclick="toggleReviewForm('<%= book._id %>')" class="text-orange-500 hover:text-orange-600 text-sm font-medium mb-3">
                                        <i class="fas fa-star mr-1"></i>
                                        Write a Review
                                    </button>
                                    
                                    <!-- Review Form -->
                                    <div id="reviewForm-<%= book._id %>" class="hidden mb-4">
                                        <form action="/library/review/<%= book._id %>" method="POST" class="space-y-3">
                                            <div class="flex items-center space-x-2">
                                                <span class="text-sm">Rating:</span>
                                                <select name="rating" required class="border rounded px-2 py-1 text-sm">
                                                    <option value="5">5 Stars</option>
                                                    <option value="4">4 Stars</option>
                                                    <option value="3">3 Stars</option>
                                                    <option value="2">2 Stars</option>
                                                    <option value="1">1 Star</option>
                                                </select>
                                            </div>
                                            <textarea name="review" placeholder="Write your review..." required class="w-full border rounded-lg px-3 py-2 text-sm" rows="3"></textarea>
                                            <button type="submit" class="bg-green-500 text-white px-4 py-1 rounded text-sm hover:bg-green-600">Submit Review</button>
                                        </form>
                                    </div>

                                    <!-- Reviews Display -->
                                    <% if (book.reviews && book.reviews.length > 0) { %>
                                        <div class="space-y-3 mb-4">
                                            <% book.reviews.slice(0, 2).forEach(review => { %>
                                                <div class="bg-gray-50 rounded-lg p-3">
                                                    <div class="flex items-center justify-between mb-2">
                                                        <div class="flex items-center space-x-2">
                                                            <img src="<%= review.reviewer.profilePhoto || '/images/default-avatar.png' %>" alt="Avatar" class="w-6 h-6 rounded-full">
                                                            <span class="text-sm font-medium"><%= review.reviewer.firstName %> <%= review.reviewer.lastName %></span>
                                                        </div>
                                                        <div class="flex">
                                                            <% for (let i = 1; i <= 5; i++) { %>
                                                                <i class="fas fa-star text-xs <%= i <= review.rating ? 'star-rating' : 'text-gray-300' %>"></i>
                                                            <% } %>
                                                        </div>
                                                    </div>
                                                    <p class="text-gray-700 text-sm"><%= review.review %></p>
                                                </div>
                                            <% }) %>
                                        </div>
                                    <% } %>

                                    <!-- Comments Section -->
                                    <div id="comments-<%= book._id %>" class="hidden">
                                        <% if (book.comments && book.comments.length > 0) { %>
                                            <div class="space-y-2 mb-3">
                                                <% book.comments.forEach(comment => { %>
                                                    <div class="flex space-x-2">
                                                        <img src="<%= comment.author.profilePhoto || '/images/default-avatar.png' %>" alt="Avatar" class="w-6 h-6 rounded-full">
                                                        <div class="flex-1">
                                                            <p class="text-sm"><span class="font-medium"><%= comment.author.firstName %></span> <%= comment.content %></p>
                                                        </div>
                                                    </div>
                                                <% }) %>
                                            </div>
                                        <% } %>
                                        
                                        <!-- Add Comment -->
                                        <form action="/library/comment/<%= book._id %>" method="POST" class="flex space-x-2">
                                            <img src="<%= user.profilePhoto || '/images/default-avatar.png' %>" alt="Your Avatar" class="w-6 h-6 rounded-full">
                                            <div class="flex-1">
                                                <input type="text" name="content" placeholder="Add a comment..." required class="w-full border rounded-lg px-3 py-1 text-sm">
                                                <button type="submit" class="mt-1 bg-orange-500 text-white px-3 py-1 rounded text-xs hover:bg-orange-600">Comment</button>
                                            </div>
                                        </form>
                                    </div>
                                </div>
                            <% } %>
                        </div>
                    </div>
                <% }) %>
            <% } else { %>
                <div class="col-span-full text-center py-12">
                    <i class="fas fa-book text-6xl text-gray-300 mb-4"></i>
                    <p class="text-gray-500 text-lg">No books in the library yet.</p>
                    <p class="text-gray-400">Be the first to suggest a book!</p>
                </div>
            <% } %>
        </div>
    </div>

    <script>
        function toggleSuggestForm() {
            const form = document.getElementById('suggestForm');
            form.classList.toggle('hidden');
        }

        function toggleReviewForm(bookId) {
            const form = document.getElementById('reviewForm-' + bookId);
            form.classList.toggle('hidden');
        }

        function toggleComments(bookId) {
            const comments = document.getElementById('comments-' + bookId);
            comments.classList.toggle('hidden');
        }

        function likeBook(bookId) {
            fetch('/library/like/' + bookId, { method: 'POST' })
                .then(response => response.json())
                .then(data => {
                    document.getElementById('likes-' + bookId).textContent = data.likes;
                })
                .catch(error => console.error('Error:', error));
        }
    </script>
</body>
</html>